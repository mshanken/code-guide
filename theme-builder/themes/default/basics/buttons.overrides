/* Buttons
–––––––––––––––––––––––––––––––––––––––––––––––––– */

.btn,
button {
  display: inline-block;
  height: 38px;
  padding: 0 30px;
  color: @brand-secondary;
  text-align: center;
  font-size: 11px;
  font-weight: 600;
  line-height: 38px;
  letter-spacing: .1rem;
  text-transform: uppercase;
  text-decoration: none;
  white-space: nowrap;
  background-color: transparent;
  border-radius: @border-radius-base;
  border: 1px solid @border-color;
  cursor: pointer;
  box-sizing: border-box;
}

input {
  &[type="submit"],
  &[type="reset"],
  &[type="button"] {
    display: inline-block;
    height: 38px;
    padding: 0 30px;
    color: @brand-secondary;
    text-align: center;
    font-size: 11px;
    font-weight: 600;
    line-height: 38px;
    letter-spacing: .1rem;
    text-transform: uppercase;
    text-decoration: none;
    white-space: nowrap;
    background-color: transparent;
    border-radius: @border-radius-base;
    border: 1px solid @border-color;
    cursor: pointer;
    box-sizing: border-box;
  }
}

.btn:hover,
button:hover {
  color: @gray-dark;
  border-color: lighten(@gray-dark, 33.3%);
  outline: 0;
}

input {
  &[type="submit"]:hover,
  &[type="reset"]:hover,
  &[type="button"]:hover {
    color: @gray-dark;
    border-color: lighten(@gray-dark, 33.3%);
    outline: 0;
  }
}

.btn:focus,
button:focus {
  color: @gray-dark;
  border-color: lighten(@gray-dark, 33.3%);
  outline: 0;
}

input {
  &[type="submit"]:focus,
  &[type="reset"]:focus,
  &[type="button"]:focus {
    color: @gray-dark;
    border-color: lighten(@gray-dark, 33.3%);
    outline: 0;
  }
}

.btn.btn-primary,
button.btn-primary {
  color: #fff;
  background-color: @brand-primary;
  border-color: @brand-primary;
}

input {
  &[type="submit"].btn-primary,
  &[type="reset"].btn-primary,
  &[type="button"].btn-primary {
    color: #fff;
    background-color: @brand-primary;
    border-color: @brand-primary;
  }
}

.btn.btn-primary:hover,
button.btn-primary:hover {
  color: #fff;
  background-color: @link-color;
  border-color: @link-color;
}

input {
  &[type="submit"].btn-primary:hover,
  &[type="reset"].btn-primary:hover,
  &[type="button"].btn-primary:hover {
    color: #fff;
    background-color: @link-color;
    border-color: @link-color;
  }
}

.btn.btn-primary:focus,
button.btn-primary:focus {
  color: #fff;
  background-color: @link-color;
  border-color: @link-color;
}

input {
  &[type="submit"].btn-primary:focus,
  &[type="reset"].btn-primary:focus,
  &[type="button"].btn-primary:focus {
    color: #fff;
    background-color: @link-color;
    border-color: @link-color;
  }
  &[type="email"],
  &[type="number"],
  &[type="search"],
  &[type="text"],
  &[type="tel"],
  &[type="url"],
  &[type="password"] {
    height: 38px;
    padding: 6px 10px; // The 6px vertically centers text on FF, ignored by Webkit
    background-color: #fff;
    border: 1px solid lighten(@border-color, 8.8%);
    border-radius: @border-radius-base;
    box-shadow: none;
    box-sizing: border-box;
  }
}