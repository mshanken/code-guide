      &lt;button type=&quot;button&quot; class=&quot;btn btn-default&quot;&gt;Middle&lt;&#x2F;button&gt;
      &lt;button type=&quot;button&quot; class=&quot;btn btn-default&quot;&gt;Right&lt;&#x2F;button&gt;
    &lt;&#x2F;div&gt;
